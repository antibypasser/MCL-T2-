function Show-ProgressBar {
    foreach ($i in 0..9) {
        $percent = $i * 10
        $bar = ("#" * $i).PadRight(10, "-")
        Write-Host "`rProgress: [ $bar ] $percent% " -ForegroundColor Blue -NoNewline
        Start-Sleep -Milliseconds 200
    }

    $bar = ("#" * 9).PadRight(10, "-")
    Write-Host "`rProgress: [ $bar ] 99% " -ForegroundColor Blue -NoNewline
}

